
<%= form_for @song do |f| %>
  <div class="form-group">
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Year of release</label>
      <%= f.number_field :year_of_release, placeholder: "Year", class: "form-control" %>
    </div>

  <label>Add this song?</label>

  <div class="form-group">
    <%= f.check_box :active %> Yes
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
